<h1><%= @doctor.id ? "Edit Doctor" : "Create New Doctor" %></h1>
<hr/>
<%= form_with(model: @doctor, local: true, class: 'ui form' ) do |f| %>
<div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, required: true, autofocus: true, placeholder: "Name" %>
  </div>
<div class="field">
    <%= f.label :profession %>
    <%= f.text_field :profession, required: true, placeholder: "Profession" %>
  </div>
  <%= f.submit nil, class: "ui secondary basic button" %>
<% end %>